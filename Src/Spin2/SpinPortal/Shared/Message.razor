@if (Text != null && _show)
{
    <MudAlert Severity="@Severity" Variant="Variant.Outlined" ShowCloseIcon="true" CloseIconClicked="() => Close()">@Text</MudAlert>
}

@code {
    [Parameter]
    public string? Text { get; set; } = null!;

    [Parameter]
    public Severity Severity { get; set; }

    private bool _show { get; set; } = true;

    private void Close()
    {
        _show = false;
    }
}
