<MudPaper Elevation="2" Class="nvarbar-panel pt-1">
    <MudToolBar Dense=true>
        <MudText>@Title</MudText>
        <MudDivider DividerType=DividerType.Middle />

        <MudStack Spacing=3 Row=true>
            @if (_showUpFolderButton)
            {
                <MudIconButton Variant="@Variant.Outlined" Color="@Color.Default" Size="@Size.Small" OnClick="@GotoParent" Icon="@Icons.Material.Sharp.ArrowUpward" />
            }

            <StandardButton Icon="@Icons.Material.Sharp.Shortcut" Disabled=_disableRowIcons OnClick=Refresh Text="Open" />
            <StandardButton Icon="@Icons.Material.Sharp.Upload" Disabled=_disableRowIcons OnClick =Refresh Text="Upload" />
            <StandardButton Icon="@Icons.Material.Sharp.Download" Disabled=_disableRowIcons OnClick =Refresh Text="Download" />
            <StandardButton Icon="@Icons.Material.Sharp.Clear" Disabled=_disableRowIcons OnClick =Refresh Text="Delete" />
            <StandardButton Icon="@Icons.Material.Sharp.Refresh" OnClick=Refresh Text="Refresh" />
        </MudStack>

        <MudSpacer />

        <MudSelect T="string" Value=@Path.Domain Label="Domain" DisableUnderLine=true AnchorOrigin="Origin.BottomCenter" Margin=Margin.Dense ValueChanged="@(args => SetDomain(args))">
            @foreach (var item in _domains)
            {
                <MudSelectItem Value=@item />
            }
        </MudSelect>
    </MudToolBar>
</MudPaper>

<Message Text=@_errorMsg IsError=true />

<Waiting Show=@(!_initialized && _errorMsg == null) />

@if (_initialized && _errorMsg == null)
{
    <MudPaper Class="mt-2">
        <DataTable Table="@_table" OnRowClick="x => OnRowClick(x)" />
    </MudPaper>
}
