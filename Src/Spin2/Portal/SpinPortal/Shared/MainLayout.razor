@inherits LayoutComponentBase

<MudThemeProvider Theme="_mudTheme" @bind-IsDarkMode=_isDarkMode />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Spin Portal</PageTitle>

<MudLayout>
    <MudAppBar Elevation="1" Style="background-color:#5A3751" Dense=true>
        <MudIconButton Icon="@Icons.Material.Sharp.Dashboard" Color="Color.Inherit" Edge="Edge.Start" OnClick="@GoHome" />
        <MudText Typo="Typo.h6">Spin Portal</MudText>
        <MudSpacer />

        <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt" Color="Color.Inherit" Edge="Edge.Start" OnClick="ShowUserInfo" />
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Edge="Edge.Start" OnClick="ShowSettings" />
    </MudAppBar>

    <LeftNav />
    <Settings Show=_showSettings OnSetDark="x => _isDarkMode = x" />
    <UserInfo Show=_showUserInfo />

    <MudContainer Class="pt-16 px-4">
        @Body
    </MudContainer>
</MudLayout>
