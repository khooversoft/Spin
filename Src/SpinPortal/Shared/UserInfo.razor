<MudDrawer @bind-Open=Show ClipMode="DrawerClipMode.Docked" Breakpoint="Breakpoint.Sm" Elevation="4" Variant=DrawerVariant.Persistent PreserveOpenState=true Anchor=Anchor.End>
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">@UserName</MudText>
    </MudDrawerHeader>

    <MudDivider DividerType="DividerType.Middle" />

    <MudStack Spacing=2 class="px-4 pt-2">
        @if (_user != null)
        {
            <MudNavMenu Color="Color.Inherit">
                <MudButton Color="Color.Info" Variant="Variant.Outlined" Href="MicrosoftIdentity/Account/SignOut" Style="text-transform: none;">Logoff User</MudButton>
            </MudNavMenu>
        }
    </MudStack>
</MudDrawer>


