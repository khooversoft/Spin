{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "HostUrl": "{directory.hostUrl}",
  "ApiKey": "{directory.apiKey}",
  "RunEnvironment": "dev",
  "ConfigStore": "d:\\SpinDisk",

  "Storage": {
    "accountName": "devartifactstorage",
    "containerName": "{runEnvironment}-directory",
    "accountKey": "{devartifactstorage.accountKey}",
    "basePath": "V1.0"
  },

  "IdentityStorage": {
    "accountName": "devartifactstorage",
    "containerName": "{runEnvironment}-identity",
    "accountKey": "{devartifactstorage.accountKey}",
    "basePath": "V1.0"
  }
}
