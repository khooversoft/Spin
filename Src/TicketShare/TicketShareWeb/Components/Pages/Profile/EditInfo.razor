@using TicketShareWeb.Components.Pages.Profile.Models

@if (Content != null)
{
    <FluentTextField Name="Content.Name"
                     @bind-Value="Content.Name"
                     Required="true"
                     Placeholder="Your name"
                     Label="Name"
                     Class="form-editbox"
                     ReadOnly="@ReadOnly"
                     @oninput="OnNameChange" />
}

@code {
    [Parameter] public UserProfileModel Content { get; set; } = null!;
    [Parameter] public bool ReadOnly { get; set; }

    private void OnNameChange(ChangeEventArgs e)
    {
        Content.Name = e.Value?.ToString() ?? Content.Name;
    }
}
