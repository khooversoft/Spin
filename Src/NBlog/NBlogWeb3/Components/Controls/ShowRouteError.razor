@using NBlog.sdk
@rendermode InteractiveServer

<div class="mt-5">
    <h1 class="display-1">@Title</h1>

    <p class="lead">Sorry, that link cannot be located.</p>
    <p>The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
    <button type="button" class="btn btn-info" @onclick="GoHome">Go to Homepage</button>
</div>

@code {
    [Parameter] public string Title { get; init; } = null!;
    [Inject] private NavigationManager _navManager { get; init; } = null!;

    private void GoHome()
    {
        _navManager.NavigateTo(NavRoutes.GotoSummary("article", "home"), true);
    }
}
