@rendermode InteractiveServer

@switch (_showIndex)
{
    case false:
        <LeftOverviewIndex ShowIndex="OnShowIndex" />
        break;

    case true:
        <LeftContextIndex ShowIndex="OnShowIndex" />
        break;
}

@code {
    private bool _showIndex { get; set; }

    private void OnShowIndex()
    {
        _showIndex = !_showIndex;
    }
}