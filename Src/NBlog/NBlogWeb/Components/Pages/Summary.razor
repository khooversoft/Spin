@page "/summary/{*index}"
@layout Layout.MainLayout

@using NBlog.sdk
@using NBlogWeb.Components.Layout
@using Toolbox.Extensions
@using Toolbox.Types
@rendermode InteractiveServer

@if (_articleIds != null && _running == 2)
{
    @foreach (var manifest in _articleIds.WithIndex())
    {
        <ArticleSummary ArticleId="@manifest.Item" Index="@manifest.Index" Attribute="@_attribute" />
    }
}
else
{
    <LoadingComponent Size="0" />
}


@code {
    [Parameter]
    public string? Index { get; set; }

    [Inject]
    private ArticleService _articleService { get; init; } = null!;

    [Inject]
    private ILogger<Home> _logger { get; init; } = null!;

    private int _running;
    private IReadOnlyList<string>? _articleIds { get; set; } = null!;
    private string? _attribute { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _running = 0;
            await Load();
        }

        await base.OnAfterRenderAsync(firstRender);
    }

    private async Task Load()
    {
        var context = new ScopeContext(_logger);
        int currentRunnning = Interlocked.CompareExchange(ref _running, 1, 0);
        if (currentRunnning == 1) return;

        try
        {
            _articleIds = Index switch
            {
                string v when v != "home" => (await _articleService.GetIndexSummaries(v, context)).Select(x => x.ArticleId).ToArray(),
                _ => (await _articleService.GetSummaries(context)).Select(x => x.ArticleId).ToArray(),
            };

            _attribute = _articleIds?.Count == 1 ? NBlogConstants.MainAttribute : null;
        }
        finally
        {
            _running = 2;
            await InvokeAsync(() => StateHasChanged());
        }
    }
}
